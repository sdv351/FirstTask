<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="gray_text">
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:textSize">@dimen/text_size1</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="black_right_text">
        <item name="android:textColor">@color/text_color2</item>
        <item name="android:textSize">@dimen/text_size1</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="black_text">
        <item name="android:textColor">@color/text_color2</item>
        <item name="android:textSize">@dimen/text_size1</item>
    </style>

    <style name="white_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size2</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
